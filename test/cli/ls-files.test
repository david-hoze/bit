# Setup fresh repo
rmdir /s /q test\cli\output\work_lsfiles 2>nul & mkdir test\cli\output\work_lsfiles & cd test\cli\output\work_lsfiles & bit init
<<<
>>> /.*[Ii]nitialized.*/
>>>= 0

# ls-files with no tracked files should return nothing
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>>
>>>= 0

# Add a text file
cd test\cli\output\work_lsfiles && echo hello> test.txt & bit add test.txt
<<<
>>>
>>>= 0

# ls-files should show the staged file
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>> /test\.txt/
>>>= 0

# Commit the file
cd test\cli\output\work_lsfiles && bit commit -m "Add test.txt"
<<<
>>> /\[master|main|files? changed/
>>>= 0

# ls-files should still show the committed file
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>> /test\.txt/
>>>= 0

# Add multiple files
cd test\cli\output\work_lsfiles && echo data> data.txt & echo notes> notes.txt & bit add data.txt notes.txt
<<<
>>>
>>>= 0

# Commit the new files
cd test\cli\output\work_lsfiles && bit commit -m "Add more files"
<<<
>>> /\[master|main|files? changed/
>>>= 0

# ls-files should show all tracked files (test.txt, data.txt, notes.txt)
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>> /test\.txt/
>>>= 0

# ls-files with --stage should show metadata (mode, hash, stage, filename)
cd test\cli\output\work_lsfiles && bit ls-files --stage
<<<
>>> /100644.*test\.txt/
>>>= 0

# ls-files with specific pathspec should filter results
cd test\cli\output\work_lsfiles && bit ls-files test.txt
<<<
>>> /^test\.txt$/
>>>= 0

# Add a binary file
cd test\cli\output\work_lsfiles && echo binary> file.bin & bit add file.bin & bit commit -m "Add binary"
<<<
>>> /\[master|main|files? changed/
>>>= 0

# ls-files should show all files including binary
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>> /file\.bin/
>>>= 0

# ls-files with wildcard pattern (should show .txt files)
cd test\cli\output\work_lsfiles && bit ls-files *.txt
<<<
>>> /\.txt/
>>>= 0

# ls-files --cached should work (default behavior)
cd test\cli\output\work_lsfiles && bit ls-files --cached
<<<
>>> /test\.txt/
>>>= 0

# Create subdirectory with files
cd test\cli\output\work_lsfiles && mkdir subdir & echo sub> subdir\sub.txt & bit add subdir\sub.txt & bit commit -m "Add subdir"
<<<
>>> /\[master|main|files? changed/
>>>= 0

# ls-files should show files in subdirectories
cd test\cli\output\work_lsfiles && bit ls-files
<<<
>>> /subdir/
>>>= 0

# ls-files with directory pathspec
cd test\cli\output\work_lsfiles && bit ls-files subdir
<<<
>>> /subdir/
>>>= 0
